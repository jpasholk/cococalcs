---
const badges = [
  { id: 'coco', name: 'Coco Coir', color: 'yellow' },
  { id: 'perlite', name: 'Perlite', color: 'blue' },
  { id: 'vermiculite', name: 'Vermiculite', color: 'green' },
  { id: 'castings', name: 'Worm Castings', color: 'gray' }
];
---

<div id="mixBadges" class="inline-flex flex-wrap gap-0.5 items-center">
  <span 
    id="badge-coco"
    class="hidden bg-amber-950 text-white text-[8px] sm:text-xs font-medium me-0.5 px-1 sm:px-2.5 py-0.5 rounded sm:rounded-md border border-amber-800 dark:bg-amber-950 dark:text-white dark:border-amber-800"
  >
    Coco<span class="badge-percentage ml-0.5"></span>
  </span>

  <span 
    id="badge-perlite"
    class="hidden bg-slate-300 text-gray-950 text-[8px] sm:text-xs font-medium me-0.5 px-1 sm:px-2.5 py-0.5 rounded sm:rounded-md border border-slate-400 dark:bg-slate-300 dark:text-gray-950 dark:border-slate-400"
  >
    Perlite<span class="badge-percentage ml-0.5"></span>
  </span>

  <span 
    id="badge-vermiculite"
    class="hidden bg-yellow-500 text-white text-[8px] sm:text-xs font-medium me-0.5 px-1 sm:px-2.5 py-0.5 rounded sm:rounded-md border border-yellow-400 dark:bg-yellow-500 dark:text-white dark:border-yellow-400"
  >
    <span class="sm:hidden">Verm</span><span class="hidden sm:inline">Vermiculite</span><span class="badge-percentage ml-0.5"></span>
  </span>

  <span 
    id="badge-castings"
    class="hidden bg-stone-800 text-white text-[8px] sm:text-xs font-medium me-0.5 px-1 sm:px-2.5 py-0.5 rounded sm:rounded-md border border-stone-700 dark:bg-stone-800 dark:text-white dark:border-stone-700"
  >
    <span class="sm:hidden">Castings</span><span class="hidden sm:inline">Worm Castings</span><span class="badge-percentage ml-0.5"></span>
  </span>
</div>