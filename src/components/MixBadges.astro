---
const badges = [
  { id: 'coco', name: 'Coco Coir', color: 'yellow' },
  { id: 'perlite', name: 'Perlite', color: 'blue' },
  { id: 'vermiculite', name: 'Vermiculite', color: 'green' },
  { id: 'castings', name: 'Worm Castings', color: 'gray' }
];
---

<div id="mixBadges" class="grid grid-cols-2 sm:flex sm:flex-wrap gap-2 items-center max-w-[280px] sm:max-w-none">
  <span 
    id="badge-coco"
    class="hidden bg-amber-950 text-white text-[0.75rem] sm:text-[0.875rem] font-medium px-3 sm:px-2.5 py-1 sm:py-0.5 rounded-md border border-amber-800 dark:bg-amber-950 dark:text-white dark:border-amber-800 flex items-center justify-center"
  >
    Coco<span class="badge-percentage ml-1"></span>
  </span>

  <span 
    id="badge-perlite"
    class="hidden bg-slate-300 text-gray-950 text-[0.75rem] sm:text-[0.875rem] font-medium px-3 py-1 sm:py-0.5 rounded-md border border-slate-400 dark:bg-slate-300 dark:text-gray-950 dark:border-slate-400 flex items-center justify-center"
  >
    Perlite<span class="badge-percentage ml-1"></span>
  </span>

  <span 
    id="badge-vermiculite"
    class="hidden bg-yellow-500 text-white text-[0.75rem] sm:text-[0.875rem] font-medium px-3 py-1 sm:py-0.5 rounded-md border border-yellow-400 dark:bg-yellow-500 dark:text-white dark:border-yellow-400 flex items-center justify-center"
  >
    <span class="sm:hidden">Verm</span><span class="hidden sm:inline">Vermiculite</span><span class="badge-percentage ml-1"></span>
  </span>

  <span 
    id="badge-castings"
    class="hidden bg-stone-800 text-white text-[0.75rem] sm:text-[0.875rem] font-medium px-3 py-1 sm:py-0.5 rounded-md border border-stone-700 dark:bg-stone-800 dark:text-white dark:border-stone-700 flex items-center justify-center"
  >
    <span class="sm:hidden">Cast</span><span class="hidden sm:inline">Worm Castings</span><span class="badge-percentage ml-1"></span>
  </span>
</div>