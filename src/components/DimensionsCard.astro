---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
  <h2 class="sm:text-3xl text-2xl font-semibold mb-4 dark:text-gray-200">{title}</h2>
  <div class="grid grid-cols-3 gap-4">
    <!-- Length input -->
    <div class="dimension-input">
      <label for="length" class="block mb-2 dark:text-gray-200">Length (ft)</label>
      <input
        type="number"
        inputmode="decimal"
        id="length"
        name="length"
        min="0"
        step="0.1"
        required
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
      />
    </div>

    <!-- Width input -->
    <div class="dimension-input">
      <label for="width" class="block mb-2 dark:text-gray-200">Width (ft)</label>
      <input
        type="number"
        inputmode="decimal"
        id="width"
        name="width"
        min="0"
        step="0.1"
        required
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
      />
    </div>

    <!-- Height input -->
    <div class="dimension-input">
      <label for="height" class="block mb-2 dark:text-gray-200">Height (in)</label>
      <input
        type="number"
        inputmode="decimal"
        id="height"
        name="height"
        min="0"
        step="0.1"
        required
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
      />
    </div>
  </div>
</div>