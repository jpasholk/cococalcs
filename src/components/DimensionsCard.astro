---
import Card from './Card.astro';
import NumberInput from './NumberInput.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Card>
  <h2 class="text-2xl sm:text-4xl font-bold text-gray-900 dark:text-gray-200 mb-4">{title}</h2>
  <div class="grid grid-cols-3 gap-4">
    <NumberInput id="length" label="Length" value="6" unit="ft" />
    <NumberInput id="width" label="Width" value="3" unit="ft" />
    <NumberInput id="height" label="Height" value="12" unit="in" />
  </div>
</Card>