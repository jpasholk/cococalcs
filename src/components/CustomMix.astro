<div id="customMixInputs" class="hidden bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
  <h2 class="text-xl font-semibold mb-4 dark:text-gray-200">Custom Mix Ratios</h2>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
    <!-- Coco input -->
    <div>
      <label for="cocoPct" class="block mb-2 dark:text-gray-200">Coco %</label>
      <input
        type="number"
        id="cocoPct"
        name="cocoPct"
        min="0"
        max="100"
        step="1"
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      />
    </div>

    <!-- Perlite input -->
    <div>
      <label for="perlitePct" class="block mb-2 dark:text-gray-200">Perlite %</label>
      <input
        type="number"
        id="perlitePct"
        name="perlitePct"
        min="0"
        max="100"
        step="1"
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      />
    </div>

    <!-- Vermiculite input -->
    <div>
      <label for="vermiculitePct" class="block mb-2 dark:text-gray-200">Vermiculite %</label>
      <input
        type="number"
        id="vermiculitePct"
        name="vermiculitePct"
        min="0"
        max="100"
        step="1"
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      />
    </div>

    <!-- Worm Castings input -->
    <div>
      <label for="castingsPct" class="block mb-2 dark:text-gray-200">Castings %</label>
      <input
        type="number"
        id="castingsPct"
        name="castingsPct"
        min="0"
        max="100"
        step="1"
        class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      />
    </div>
  </div>

  <!-- Total percentage display -->
  <div class="mt-4">
    <p id="totalPct" class="text-sm font-medium dark:text-gray-200">Total: 0%</p>
  </div>
</div>