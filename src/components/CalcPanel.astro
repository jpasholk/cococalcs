---
interface Props {
  id: string;
  title: string;
  formId: string;
  isHidden?: boolean;
  isComingSoon?: boolean;
  comingSoonMessage?: string;
}

const { 
  id, 
  title, 
  formId, 
  isHidden = false, 
  isComingSoon = false, 
  comingSoonMessage 
} = Astro.props;

import DimensionsCard from './DimensionsCard.astro';
import MixSelection from './MixSelection.astro';
import Results from './Results.astro';
---

<div id={id} class:list={["relative", { hidden: isHidden }]} role="tabpanel" aria-labelledby={`tab-${id}`}>
  <form id={formId} class="space-y-2 sm:space-y-6 relative">
    {isComingSoon && (
      <div class="absolute inset-0 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm z-50 flex items-center justify-center">
        <div class="text-center p-6 bg-white/90 dark:bg-gray-800/90 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-semibold mb-2 text-indigo-800 dark:text-indigo-400">Coming Soon!</h2>
          <p class="text-gray-600 dark:text-gray-400">{comingSoonMessage}</p>
        </div>
      </div>
    )}
    <DimensionsCard title={`${title} Dimensions`}/>
    <MixSelection title="Soil Mix"/>
    <Results />
  </form>
</div>