---
import Button from './Button.astro';
---
<div id="warning" class="group invisible fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center z-50">
  <div class="group-[.visible]:visible invisible bg-white/80 dark:bg-gray-800 p-6 rounded-lg shadow-xl max-w-md w-full mx-4 border border-gray-400 dark:border-gray-700">
    <div class="mt-3">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100 dark:bg-yellow-900">
        <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100 mt-5 text-center">Alternative Growing Media</h3>
      <div class="mt-2 px-7 py-3">
        <p id="warningMessage" class="text-sm text-gray-500 dark:text-gray-300"></p>
        <h4 class="font-medium text-gray-900 dark:text-gray-100 mt-4 mb-2">Things to keep in mind:</h4>
        <ul id="warningFactors" class="list-disc pl-5 mt-2 text-sm text-gray-500 dark:text-gray-300"></ul>
      </div>
      <div class="flex justify-center gap-3 px-4 py-3">
        <Button
          id="cancelButton"
          variant="secondary"
        >
          Add Coco Coir
        </Button>
        <Button
          id="continueButton"
          variant="warning"
        >
          Continue Anyway
        </Button>
      </div>
    </div>
  </div>
</div>