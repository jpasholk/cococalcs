---
import NavDropdown from './NavDropdown.astro';
import CocoCalcsIcon from './icons/CocoCalcsIcon.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Calculate how much soil you need for your garden" 
} = Astro.props;

const navItems = [
  { name: 'Garden Pots', href: '#', badge: 'Coming Soon' },
  { name: 'Seed Starting', href: '#', badge: 'Coming Soon' }
];
---

<header class="mb-4">
  <div class="flex justify-between items-start">
    <div class="flex items-center gap-3">
      <CocoCalcsIcon class="w-10 h-10 text-gray-900 dark:text-gray-100" />
      <div>
        <h1 class="text-2xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100">{title}</h1>
        <h2 class="text-sm sm:text-lg md:text-xl text-gray-800 dark:text-gray-300 leading-tight max-w-[100%]">{description}</h2>
      </div>
    </div>

    <NavDropdown items={navItems} />
  </div>
  <hr class="my-4 border-t border-gray-400">
</header>