---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="mb-4">
  <h1 class="text-3xl sm:text-5xl font-bold text-apple-gray-500 dark:text-gray-100">{title}</h1>
  <h2 class="text-sm sm:text-lg md:text-xl text-gray-500 dark:text-gray-400 leading-tight max-w-[100%]">Calculate how much soil you need for your garden bed</h2>
</header>
<hr class="my-4 border-t border-gray-400">