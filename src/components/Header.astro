---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="mb-6">
  <h1 class="sm:text-5xl font-bold text-apple-gray-500 dark:text-gray-100 text-3xl">{title}</h1>
  <h2 class="sm:text-2xl text-gray-500 dark:text-gray-400">Calculate how much soil you need for your garden bed</h2>
</header>
<hr class="my-4 border-t border-gray-400">