---
import GardenBedIcon from './icons/GardenBedIcon.astro';
import GardenPotIcon from './icons/GardenPotIcon.astro';
import SeedStartingIcon from './icons/SeedStartingIcon.astro';
import { TAB_STYLES } from '../consts';
---

<div class="rounded-xl bg-white/80 dark:bg-gray-800 p-2 border border-gray-400 dark:border-gray-700">
  <div role="tablist" aria-label="Calculator types" class="flex space-x-1">
    <button
      role="tab"
      aria-selected="true"
      aria-controls="garden-beds"
      id="tab-garden-beds"
      data-tab="#garden-beds"
      class:list={[TAB_STYLES.base, TAB_STYLES.active]}
    >
      <GardenBedIcon />
      <span class="text-xs sm:text-sm">Garden Beds</span>
    </button>
    
    <button
      role="tab"
      aria-selected="false"
      aria-controls="garden-pots"
      id="tab-garden-pots"
      data-tab="#garden-pots"
      class:list={[TAB_STYLES.base, TAB_STYLES.inactive]}
    >
      <GardenPotIcon />
      <span class="text-xs sm:text-sm">Garden Pots</span>
    </button>
    
    <button
      role="tab"
      aria-selected="false"
      aria-controls="seed-starting"
      id="tab-seed-starting"
      data-tab="#seed-starting"
      class:list={[TAB_STYLES.base, TAB_STYLES.inactive]}
    >
      <SeedStartingIcon />
      <span class="text-xs sm:text-sm">Seed Starting</span>
    </button>
  </div>
</div>