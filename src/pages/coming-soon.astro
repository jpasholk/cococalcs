---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Coming Soon">
  <div class="max-w-2xl mx-auto p-3 sm:p-6">
    <div class="relative overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="absolute inset-0 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm flex items-center justify-center z-10">
        <div class="text-center p-6">
          <h2 class="text-2xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">
            Coming Soon
          </h2>
          <p class="text-gray-600 dark:text-gray-300">
            This feature is currently in development.
          </p>
          <a 
            href="/"
            class="inline-block mt-4 px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors"
          >
            Return Home
          </a>
        </div>
      </div>
      
      <div class="p-6 blur-sm">
        <div class="mt-6 space-y-6">
          <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">
              Feature Preview
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300">
              This is a preview of how the feature will look when it's ready.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>