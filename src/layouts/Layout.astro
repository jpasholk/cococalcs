---
import Head from '../components/Head.astro';
import "../styles/global.css";
import { SITE_TITLE } from '../consts';
import { fade } from 'astro:transitions';

interface Props {
    title?: string;
}

const { title = SITE_TITLE } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title={title} />
    <body transition:animate={fade({ duration: ".5s" })}  class="min-h-screen bg-gray-300 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
        <slot />
    </body>
</html>
