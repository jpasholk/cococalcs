---
import Head from '../components/Head.astro';
import "../styles/global.css";
import { SITE_TITLE } from '../consts';

interface Props {
    title?: string;
}

const { title = SITE_TITLE } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title={title} />
    <body class="min-h-screen bg-gray-50 text-gray-900">
        <slot />
    </body>
</html>
