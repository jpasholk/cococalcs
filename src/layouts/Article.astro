---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { fade } from 'astro:transitions';

const { frontmatter } = Astro.props;

// Get the imported image from the MDX scope
const ogImage = Astro.props.ogImage;
---

<!doctype html>
<html lang="en">
    <Head 
        title={frontmatter.title} 
        description={frontmatter.description || SITE_DESCRIPTION}
        image={ogImage} 
    />
    <body transition:animate={fade({ duration: ".5s" })} class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
        <div class="max-w-2xl mx-auto p-3 sm:p-6">
            <Header 
                title={frontmatter.title} 
                description={frontmatter.description}
            />
            <main class="flex-1">
                <div class="max-w-2xl mx-auto">
                    <article class="prose prose-lg dark:prose-invert max-w-none mb-8">
                        <slot />
                    </article>
                </div>
            </main>
            <Footer />
        </div>
    </body>
</html>